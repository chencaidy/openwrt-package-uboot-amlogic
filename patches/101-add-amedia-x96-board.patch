+// SPDX-License-Identifier:	GPL-2.0+
+/*
+ *
+ * Copyright (c) 2021 Chen Caidy
+ *
+ */
+
+#include <common.h>
+#include <adc.h>
+#include <command.h>
+#include <dm.h>
+#include <env.h>
+#include <init.h>
+#include <log.h>
+#include <net.h>
+#include <vfd.h>
+#include <asm/io.h>
+#include <asm/arch/boot.h>
+#include <asm/arch/eth.h>
+
+#define HW_ADC_KEY_CHANNEL 2
+
+static int detect_adckey(void)
+{
+	unsigned int adcval = 0;
+	int ret;
+
+	ret = adc_channel_single_shot("adc@9000", HW_ADC_KEY_CHANNEL, &adcval);
+	if (ret) {
+		log_err("ADC:   read error %d\n", ret);
+		return -1;
+	}
+
+	log_info("ADC:   button: %u\n", adcval);
+
+	if (adcval < 50) {
+		return 1;
+	}
+
+	return 0;
+}
+
+int misc_init_r(void)
+{
+	meson_generate_serial_ethaddr();
+
+	vfd_init();
+	detect_adckey();
+
+	switch (meson_get_boot_device()) {
+	case BOOT_DEVICE_SD:
+		run_command("vfd icon CARD on", 0);
+		break;
+	case BOOT_DEVICE_USB:
+		run_command("vfd icon USB on", 0);
+		break;
+	default:
+		break;
+	}
+
+	return 0;
+}
